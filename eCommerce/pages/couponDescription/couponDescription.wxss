page{
  font-size: 26rpx;
  background-color: #f3f3f3;
}
.coupon-desc{
  background-color: #fff;
}
.top-block{
  width: 750rpx;
  height: 180rpx;
  /* background: -webkit-linear-gradient(left, #FFAE00, #FF7100);
  background: linear-gradient(left, #FFAE00, #FF7100); */
  background-size: 100% 100%;
  padding: 52rpx 59rpx;
  box-sizing: border-box;
}
.top-block .tip:nth-child(1){
  font-size: 34rpx;
  color: #fff;
}
.top-block .tip:nth-child(2){
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #fff;
}
.coupon-item{
  padding: 28rpx 30rpx 0 30rpx;
  border-bottom: 1rpx solid #eee;
}
.coupon-item .main-mess{
  color: #FF7200;
  font-size: 30rpx;
  margin-bottom: 36rpx;
}
.coupon-item .main-mess .mess-item{
  display: inline-block;
  margin-right: 14rpx;
  font-size: 32rpx;
  vertical-align: middle;
}
.coupon-item .main-mess .status{
  display: inline-block;
  background-color: #D2D2D2;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 4rpx;
  border-radius:4rpx;
  vertical-align: middle;
}
.coupon-item .main-mess .status.active{
  background-color: #FF7200;
}
.coupon-item .detail{
  margin-bottom: 24rpx;
  color: #666666;
  font-size: 28rpx;
}