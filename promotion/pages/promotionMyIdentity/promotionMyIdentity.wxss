.top-section {
  margin-bottom: 20rpx;
  padding: 30rpx 0 32rpx;
  text-align: center;
  background-image: linear-gradient(-10deg, #F99425 0%, #ff7100 100%);
}
.identity-logo-container {
  position: relative;
  width: 96rpx;
  margin: 0 auto;
}
.identity-logo {
  position: absolute;
  top: 54rpx;
  left: 20rpx;
  width: 56rpx;
}
.logo-bg {
  width: 96rpx;
}
.identity-title {
  margin: 30rpx auto 20rpx;
  font-size: 40rpx;
  color: #fff;
}
.identity-benefit {
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #ffc698;
}
.identity-manage-btn {
  display: inline-block;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  text-align: center;
  background-color: #fff;
  color: #fe7100;
}
.middle-section {
  padding: 20rpx;
  margin-bottom: 130rpx;
}
.middle-section-title {
  padding-bottom: 20rpx;
  font-size: 34rpx;
  border-bottom: 1px solid #e5e5e5;
  font-weight: bold;
}
.middle-section-item {
  padding: 14rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.middle-img-container {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  background: #ff7100;
  text-align: center;
  color: #fff;
}
.middel-benefit {
  padding: 0 30rpx;
  display: inline-block;
  width: calc(100% - 200rpx);
  height: 102rpx;
  font-size: 28rpx;
  padding-top: 38rpx;
  vertical-align: top;
}
.middel-benefit text {
  color: #002F00;
}
.middel-section-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
}
.promotion-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  border-radius: 4px;
  color: #fff;
  background-color: #ff7100;
  text-align: center;
}
.page-bottom-content {
  padding-top: 38rpx; 
}
.apply-dialog-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff7100;
  text-align: center;
}
.apply-dialog-sub-title {
  margin: 16rpx 0 46rpx;
  font-size: 29rpx;
  color: #999;
  text-align: center;
}
.apply-dialog-input-list {
  max-height: 780rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.apply-dialog-item {
  padding: 14rpx 42rpx;
}
.apply-dialog-item input {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f4f4f4;
  padding: 0 30rpx;
}
.page-dialog-wrap .promotion-btn {
  margin-top: 40rpx;
  margin-bottom: 19rpx;
}
.success-dialog {
  margin: 260rpx auto 0;
  width: 82%;
  text-align: center;
  background-color: #fff;
  border-radius: 15rpx;
}
.success-img-container {
  position: relative;
  margin: 0 auto;
  width: 414rpx;
  height: 200rpx;
}
.success-img-container image {
  position: absolute;
  top: -160rpx;
  left: 0;
  width: 414rpx;
  height: 374rpx;
}
.success-dialog-bottom {
  height: 108rpx;
  line-height: 108rpx;
  font-size: 36rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  color: #fff;
  background-color: #ff7100;
}
.success-tip {
  margin: 40rpx auto 22rpx;
  font-size: 40rpx;
  color: #ff7100;
}
.success-sub-tip {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 72rpx;
}
.promotion-ico {
  font-size: 44rpx;
  margin-top: 30rpx;
}
.promotion-title {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.promotion-avatar {
  font-size: 44rpx;
  position: absolute;
  left: 50%;
  margin-left: -24rpx;
  margin-top: 52rpx;
  color: #ff7100;
}
